<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_item_post">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="13dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_post_profil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_user"/>
        <TextView
            android:id="@+id/item_post_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:src="@drawable/icon_more_menu"
            android:layout_gravity="center" />
    </LinearLayout>
    <ImageView
        android:id="@+id/item_post_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="13dp">
        <ImageButton
            android:id="@+id/item_post_ril_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_ril"
            android:scaleType="fitXY"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/item_post_ril"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:textSize="13sp"
            android:text="0" />
        <ImageButton
            android:id="@+id/item_post_fek_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_fek"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/item_post_fek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:textSize="13sp"
            android:text="0" />
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="nyata"-->
<!--            android:layout_marginStart="5dp"-->
<!--            android:gravity="bottom"-->
<!--            android:textSize="13sp"/>-->
        <ImageButton
            android:id="@+id/item_post_comment_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_komen"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/item_post_comment_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:textSize="13sp"
            android:text="0"/>
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="komen"-->
<!--            android:layout_marginStart="5dp"-->
<!--            android:textSize="13sp"-->
<!--            android:gravity="bottom"/>-->
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_share"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/item_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="11sp"/>
    </LinearLayout>
</LinearLayout>
